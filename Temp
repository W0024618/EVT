      function makeLocalDateFromRow(r) {
        try {
          if (!r) return null;

          // 1) If a locale-aware timestamp is already present (with timezone info), prefer it.
          if (r.LocaleMessageTime) {
            const t = new Date(r.LocaleMessageTime);
            if (!isNaN(t.getTime())) return t;
          }
        } catch (e) {}

        // Helper to parse ints safely
        function toInt(v, fallback = 0) {
          const n = Number(v);
          return Number.isFinite(n) ? n : fallback;
        }

        try {
          // 2) If both Date and Time fields exist, parse components and construct a local Date
          if (r.Date && r.Time) {
            // normalize date separator and take only the first 10 chars (YYYY-MM-DD)
            const dateStr = String(r.Date).slice(0, 10).replace(/\//g, '-');
            const dateParts = dateStr.split('-').map(p => toInt(p, NaN));
            if (dateParts.length === 3 && !isNaN(dateParts[0])) {
              const year = dateParts[0];
              const month = dateParts[1]; // 1..12
              const day = dateParts[2];

              // time may include fractional seconds or timezone — strip off fractional / zone parts
              const timeRaw = String(r.Time).split(/[.+Z ]/)[0]; // keep HH:MM:SS
              const timeParts = timeRaw.split(':').map(p => toInt(p, 0));
              const hh = timeParts[0] || 0;
              const mm = timeParts[1] || 0;
              const ss = timeParts[2] || 0;

              // construct local Date using numeric components (this avoids ISO-to-UTC parsing issues)
              return new Date(year, month - 1, day, hh, mm, ss, 0);
            }
          }
        } catch (e) {}

        try {
          // 3) If only Date exists, return local midnight for that date
          if (r.Date) {
            const parts = String(r.Date).slice(0, 10).replace(/\//g, '-').split('-');
            if (parts.length === 3) {
              const y = toInt(parts[0], NaN);
              const m = toInt(parts[1], NaN);
              const d = toInt(parts[2], NaN);
              if (!isNaN(y)) return new Date(y, m - 1, d, 0, 0, 0, 0);
            }
          }
        } catch (e) {}

        return null;
      }























