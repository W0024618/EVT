            kind = imghdr.what(None, h=b)
            if not kind:
                # fallback to jpeg
                kind = 'jpeg'
            mime = 'image/' + ('jpeg' if kind == 'jpg' else kind)
        except Exception:
            mime = 'image/jpeg'






