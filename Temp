Remove-Item Env:\ATT_DB_URL -ErrorAction SilentlyContinue




# create_tables.py
from db import Base, engine

Base.metadata.create_all(bind=engine)
print("DB tables created (SQLite).")



python create_tables.py




uvicorn app:app --reload --host 0.0.0.0 --port 8000










docker run --name attendance-pg `
  -e POSTGRES_USER=postgres `
  -e POSTGRES_PASSWORD=postgrespw `
  -e POSTGRES_DB=postgres `
  -p 5432:5432 -d postgres:15





docker exec -it attendance-pg psql -U postgres -c "CREATE DATABASE attendance_db;"
docker exec -it attendance-pg psql -U postgres -c "CREATE USER att_user WITH PASSWORD 'western@2025';"
docker exec -it attendance-pg psql -U postgres -c "GRANT ALL PRIVILEGES ON DATABASE attendance_db TO att_user;"




$env:ATT_DB_URL = "postgresql://att_user:western@2025@localhost:5432/attendance_db"



