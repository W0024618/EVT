    try:
        # If we have flagged rows, return ALL flagged rows (strict)
        if flagged_df is not None and not flagged_df.empty:
            sample_source = flagged_df
            # return exactly flagged_count rows (no hidden head(10) truncation)
            samples = _clean_sample_df(sample_source, max_rows=int(len(flagged_df)))
        else:
            # old behaviour: show a small sample of combined_df
            sample_source = combined_df
            samples = _clean_sample_df(sample_source.head(10), max_rows=10) if sample_source is not None and not sample_source.empty else []
    except Exception:
        samples = []

    # ---------------------------
    # Build aggregated flagged persons (one row per employee with violation count)
    # ---------------------------
    try:
        flagged_persons_aggregated = []
        if flagged_df is not None and not flagged_df.empty:
            # choose grouping key preference: person_uid -> EmployeeID -> EmployeeName
            if 'person_uid' in flagged_df.columns and flagged_df['person_uid'].notna().any():
                group_key = 'person_uid'
            elif 'EmployeeID' in flagged_df.columns and flagged_df['EmployeeID'].notna().any():
                group_key = 'EmployeeID'
            else:
                group_key = 'EmployeeName'

            # pick a robust date source for counting unique flagged dates
            date_col = None
            for cand in ('Date', 'FirstSwipe', 'LocaleMessageTime', 'LastSwipe'):
                if cand in flagged_df.columns:
                    date_col = cand
                    break

            # prepare a working copy
            agg_df = flagged_df.copy()
            if date_col:
                try:
                    agg_df['_flag_date'] = pd.to_datetime(agg_df[date_col], errors='coerce').dt.date
                except Exception:
                    agg_df['_flag_date'] = None
            else:
                agg_df['_flag_date'] = None

            # group and build summary
            def _first_nonempty(series):
                for v in series:
                    try:
                        if v is None:
                            continue
                        s = str(v).strip()
                        if s and not _looks_like_guid(s):
                            return s
                    except Exception:
                        continue
                return None

            grouped = agg_df.groupby(group_key, sort=False).agg({
                'EmployeeName': lambda s: _first_nonempty(s) or None,
                'EmployeeID': lambda s: _first_nonempty(s) or None,
                '_flag_date': lambda s: sorted({d.isoformat() for d in s.dropna().unique()})  # list of ISO dates
            }).reset_index().rename(columns={'_flag_date': 'violation_dates'})

            # convert to list-of-dicts with violation_count
            for _, row in grouped.iterrows():
                dates_list = row.get('violation_dates') or []
                violation_count = int(len(dates_list))
                rec = {
                    'person_key': str(row.get(group_key)) if row.get(group_key) is not None else None,
                    'EmployeeName': row.get('EmployeeName'),
                    'EmployeeID': row.get('EmployeeID'),
                    'violation_count': violation_count,
                    'violation_dates': ', '.join(dates_list) if dates_list else None
                }
                flagged_persons_aggregated.append(rec)
        else:
            flagged_persons_aggregated = []
    except Exception:
        logging.exception("Failed to build aggregated flagged persons")
        flagged_persons_aggregated = []










"sample": (samples if isinstance(samples, list) else samples),
"flagged_persons": (samples if samples else []),



"sample": (samples if isinstance(samples, list) else samples),
"flagged_rows_details": (samples if samples else []),   # original detail rows (unchanged)
"flagged_persons": (flagged_persons_aggregated if flagged_persons_aggregated else []),











