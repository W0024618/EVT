      '/api-py': {
        target: BACKEND_PY_HOST,
        changeOrigin: true,
        secure: false,
        timeout: 120000,
        rewrite: (path) => path.replace(/^\/api-py/, '/api') // adjust target path if FastAPI lives at /api or /
      },

      // Node backend (legacy)
      '/api': {
