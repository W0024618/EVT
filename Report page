  const isoDateOnlyToLocalDate = (iso) => {
    if (!iso) return null;
    const s = iso.toString().slice(0, 10);
    const [y, m, d] = s.split('-').map(n => parseInt(n, 10));
    return new Date(y, m - 1, d);
  };


