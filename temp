# confirm which python you're using (should point inside .venv)
python -c "import sys; print('PYTHON:', sys.executable)"

# confirm whether werkzeug is visible to that interpreter
python -c "import pkgutil; print('werkzeug loader:', pkgutil.find_loader('werkzeug'))"

# show pip-installed info (will be empty if not installed)
python -m pip show werkzeug

# list flask & werkzeug presence quickly
python -m pip list | findstr /R "Flask|werkzeug"






python -m pip install --upgrade --force-reinstall --no-cache-dir werkzeug





# check which pip is used
python -m pip --version

# check env variable PYTHONPATH (should typically be empty for venv)
Get-ChildItem Env:PYTHONPATH

# list site-packages directories for this interpreter
python - <<'PY'
import sys,site
print('sys.path:')
for p in sys.path:
    if 'site-packages' in (p or ''):
        print('  ',p)
print('\nAvailable modules starting with "werk" or "flask":')
import pkgutil
print([m.name for m in pkgutil.iter_modules() if m.name.lower().startswith(('werk','flask'))])
PY






# deactivate (if necessary)
deactivate

# delete venv (be sure you have requirements.txt)
Remove-Item -Recurse -Force .\.venv

# recreate
python -m venv .venv
.\.venv\Scripts\Activate

# upgrade packaging tools
python -m pip install --upgrade pip setuptools wheel

# install requirements
python -m pip install -r requirements.txt












